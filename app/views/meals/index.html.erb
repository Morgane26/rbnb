<h1> Les plats </h1>

  <div class="container">
    <div class="row">
      <% @meals.each do |meal| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card">
            <%= cl_image_tag(meal.photo,
              width: 350, height: 350, crop: :fill) %>
            <div class="card-body">
              <h5 class="card-title"><%= meal.name %></h5>
              <p class="card-text"> <%= meal.description %> </p>
              <%= link_to "Description", meal_path(meal), :class => "btn btn-primary pipoup"%>
              <br>
            </div>
            <br>
          </div>
        </div>
      <%end%>
    </div>
  </div>
